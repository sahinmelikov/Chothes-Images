@using WebFrontToBack.Areas.Admin.ViewModels
@model CreateServiceVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="forms-sample" method="post" enctype="multipart/form-data" >
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Category">
                    <span class="text text-danger" asp-validation-for="Name"></span>
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text text-danger" asp-validation-for="Description"></span>
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span class="text text-danger" asp-validation-for="Price"></span>
                    <label asp-for="Photos"></label>
                    <input asp-for="Photos" class="form-control" placeholder="Photos">
                    <span class="text text-danger" asp-validation-for="Photos"></span>

                      <label asp-for="Photos"></label>
                    <select asp-for="CategoryId" class="">

                       @foreach (var item in Model.Categories)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                            
                                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="Photos"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2 text-light">Create</button>
                <button class="btn btn-light" asp-action="Index">Go back</button>

            </form>
        </div>
    </div>
</div>